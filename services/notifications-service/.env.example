# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@rabbitmq:5672

# Server Configuration
PORT=3000
NODE_ENV=development

# Notification Channels Configuration
EMAIL_ENABLED=true
SMS_ENABLED=true
PUSH_ENABLED=true

# CORS Configuration (comma-separated origins for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Email Service Configuration (if EMAIL_ENABLED=true)
EMAIL_SERVICE_URL=http://email-service:3000
EMAIL_FROM=noreply@ecommerce.com

# SMS Service Configuration (if SMS_ENABLED=true)
SMS_SERVICE_URL=http://sms-service:3000
SMS_FROM=+1234567890

# Push Notification Configuration (if PUSH_ENABLED=true)
PUSH_SERVICE_URL=http://push-service:3000
PUSH_API_KEY=your-push-api-key